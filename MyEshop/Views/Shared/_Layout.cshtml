<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/lib/bootstrap4/css/bootstrap-rtl.css" rel="stylesheet" />
    @*<link href="~/lib/bootstrap/dist/css/bootstrap-rtl.min.css" rel="stylesheet" />*@
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/StyleSheet1.css" rel="stylesheet" />
    <link rel="stylesheet" href="https ://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>

<body class="rtl">

    <header class="p-3 text-white"
            style="background-color:#54d242;font-family:Nazanin;font-size:24px;">
        <div class="container">
            
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start"
                 >
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link px-2  text-white">فروشگاه من</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="ContactUs" class="nav-link px-2 text-white">تماس با ما</a></li>
                    <li><partial name="_Groups" /></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="AboutUs" class="nav-link px-2 text-white">درباره ما</a></li>
                </ul>
                @*<form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3">
                        <input type="search" class="form-control form-control-dark " placeholder="جستجو..." aria-label="Search">
                    </form>*@
                <div class="text-end align-items-end" style="padding-right:400px;">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-outline-light me-2">
                            @User.Identity.Name کاربر عزیز خوش آمدید
                        </a>
                        <a class="btn btn-warning" asp-area="" asp-controller="Account" asp-action="Logout">
                            خروج
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light me-2" asp-area="" asp-controller="Account" asp-action="Register">
                            ثبت نام
                        </a>
                        <a class="btn btn-warning" asp-area="" asp-controller="Account" asp-action="Login">
                            ورود
                        </a>
                    }

                </div>
            </div>
        </div>

    </header>
    @*<ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#">خانه</a></li>
        <li class="breadcrumb-item"><a href="#">کتابخانه</a></li>
        <li class="breadcrumb-item active">اطلاعات</li>
    </ol>*@
    @RenderSection("index", required: false)

    <div class="container" style="margin-bottom:20%;">

        <div class="row mx-n5 pt-5">

            <div class="col-md-2 ml-n4 mr-n5 ">
                @await Component.InvokeAsync(name: "ProductGroupsComponent")
                

            </div>
            <div class="col-md-8 ml-5">
                @RenderBody()
            </div>
            <div class="col-md-2 pt-5">
                @await Component.InvokeAsync(name: "OrderComponent")
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted  m-3 p-3">
        <div class="container">
            &copy; 1400 - MyEshop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
